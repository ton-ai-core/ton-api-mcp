{
  "name": "ton-api-mcp",
  "version": "0.1.1",
  "description": "TON API Model Context Protocol (MCP) server for integrating TON API with AI assistants",
  "main": "bin/ton-api-mcp-server.js",
  "type": "module",
  "bin": {
    "tonapi": "bin/ton-api-cli.js",
    "tonapi-cli": "bin/ton-api-cli.js",
    "tonapi-mcp": "bin/ton-api-mcp-server.js",
    "ton-api-mcp": "bin/ton-api-mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "cli": "node bin/ton-api-cli.js",
    "mcp": "node bin/ton-api-mcp-server.js",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint src/",
    "start": "node bin/ton-api-cli.js",
    "start:mcp": "node bin/ton-api-mcp-server.js",
    "test": "node test-api.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ton-ai-core/tonapi-mcp.git"
  },
  "keywords": [
    "ton",
    "blockchain",
    "cli",
    "tonapi",
    "mcp",
    "ai",
    "model context protocol"
  ],
  "author": "skulidropek",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.5.0",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^13.1.0",
    "dotenv": "^16.3.1",
    "tonapi-sdk-js": "^2.0.9",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.3"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.6.0",
    "@types/node": "^20.10.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
